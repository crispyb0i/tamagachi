<h1><%= @name %></h1>
<ul>
  <li>Food level: <%= @food_level %></li>
  <li>activity level: <%= @activity_level %></li>
  <li>rest level: <%= @rest_level %></li>
  <li>bathroom level: <%= @bathroom_level %></li>
</ul>

<img src="img/default.png">

<form action="/food">
  <button type="submit" class="btn btn-primary action">FEED</button>
</form>

<form action="/play">
  <button type="submit" class="btn btn-success action">PLAY</button>
</form>

<form action="/rest">
  <button type="submit" class="btn btn-warning action">REST</button>
</form>

<form action="/bathroom">
  <button type="submit" class="btn btn-danger action">BATHROOM</button>
</form>
